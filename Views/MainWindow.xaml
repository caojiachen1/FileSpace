                                <MenuItem Header="按名称排序" Command="{Binding SetSortModeCommand}" CommandParameter="Name">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SortMode}" Value="Name">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="TextSortAscending24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="按大小排序" Command="{Binding SetSortModeCommand}" CommandParameter="Size">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SortMode}" Value="Size">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="DataUsage24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="按类型排序" Command="{Binding SetSortModeCommand}" CommandParameter="Type">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SortMode}" Value="Type">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="DocumentBulletList24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="按修改日期排序" Command="{Binding SetSortModeCommand}" CommandParameter="Date">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SortMode}" Value="Date">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Timer24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="升序" Command="{Binding SetSortModeCommand}" CommandParameter="Ascending">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SortAscending}" Value="True">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="ArrowSortUp24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="降序" Command="{Binding SetSortModeCommand}" CommandParameter="Descending">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SortAscending}" Value="False">
                                                    <Setter Property="IsChecked" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="ArrowSortDown24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                        </Menu>

                        <Menu VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" Padding="0">
                            <MenuItem x:Name="ViewModeMenu" ToolTip="查看选项" IsSubmenuOpen="{Binding IsViewModeMenuOpen, Mode=TwoWay}">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon x:Name="ViewModeIcon" Symbol="TextBulletListSquare24" FontSize="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="视图" FontSize="13" VerticalAlignment="Center"/>
                                        <ui:SymbolIcon Symbol="ChevronDown24" FontSize="12" Margin="4,0,0,0" RenderTransformOrigin="0.5,0.5">
                                            <ui:SymbolIcon.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </ui:SymbolIcon.RenderTransform>
                                            <ui:SymbolIcon.Style>
                                                <Style TargetType="ui:SymbolIcon">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSubmenuOpen, RelativeSource={RelativeSource AncestorType=MenuItem}}" Value="True">
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="180"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ui:SymbolIcon.Style>
                                        </ui:SymbolIcon>
                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Header="详细信息" Click="ViewModeMenuItem_Click" Tag="详细信息">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="TextBulletListSquare24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="超大图标" Click="ViewModeMenuItem_Click" Tag="超大图标">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Grid28"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="大图标" Click="ViewModeMenuItem_Click" Tag="大图标">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Grid24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="中等图标" Click="ViewModeMenuItem_Click" Tag="中等图标">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Apps24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="小图标" Click="ViewModeMenuItem_Click" Tag="小图标">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="AppsList24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                        </Menu>

                        <Menu VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Margin="0,0,0,0" Padding="0" Height="45" Width="45">
                            <MenuItem x:Name="MoreToolsMenu" ToolTip="更多" IsSubmenuOpen="{Binding IsMoreToolsMenuOpen, Mode=TwoWay}">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                                        <Ellipse Width="4" Height="4" Fill="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,3,0"/>
                                        <Ellipse Width="4" Height="4" Fill="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,3,0"/>
                                        <Ellipse Width="4" Height="4" Fill="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                </MenuItem.Header>
                                <MenuItem Header="全部选择" Command="{Binding SelectAllCommand}">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Apps24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="全部取消" Command="{Binding ClearSelectionCommand}">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Dismiss24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="反向选择" Command="{Binding InvertSelectionCommand}">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="ArrowSwap24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="文件夹分析..." Command="{Binding AnalyzeFolderCommand}">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Folder24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="高级搜索..." Command="{Binding ShowSearchWindowCommand}">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Search24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="选项" Click="Settings_Click">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Settings24"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                        </Menu>
                    </StackPanel>

                    <!-- VS Code Style Panel Toggle Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                        <!-- Left Panel Toggle (Folder Tree) -->
                        <Menu VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Margin="5,0" Padding="0">
                            <MenuItem Command="{Binding ToggleLeftPanelCommand}" ToolTip="切换文件夹树 (Alt+1)">
                                <MenuItem.Header>
                                    <Grid Width="24" Height="20">
                                        <!-- VS Code style split icon with proper hollow effect -->
                                        <Rectangle Width="10" Height="18" HorizontalAlignment="Left" VerticalAlignment="Center" 
                                                   RadiusX="1" RadiusY="1">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <!-- Default: hollow (panel closed) -->
                                                    <Setter Property="Fill" Value="Transparent"/>
                                                    <Setter Property="Stroke" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                    <Setter Property="StrokeThickness" Value="1"/>
                                                    <Style.Triggers>
                                                        <!-- Filled when panel is open -->
                                                        <DataTrigger Binding="{Binding IsLeftPanelVisible}" Value="True">
                                                            <Setter Property="Fill" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                                                            <Setter Property="Stroke" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                        <Rectangle Width="12" Height="18" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                                   Fill="Transparent" Stroke="{DynamicResource TextFillColorSecondaryBrush}" 
                                                   StrokeThickness="1" RadiusX="1" RadiusY="1"/>
                                    </Grid>
                                </MenuItem.Header>
                            </MenuItem>
                        </Menu>
                        
                        <!-- Right Panel Toggle (Preview) -->
                        <Menu VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Margin="5,0" Padding="0">
                            <MenuItem Command="{Binding ToggleRightPanelCommand}" ToolTip="切换预览面板 (Alt+2)">
                                <MenuItem.Header>
                                    <Grid Width="24" Height="20">
                                        <!-- VS Code style split icon with proper hollow effect -->
                                        <Rectangle Width="12" Height="18" HorizontalAlignment="Left" VerticalAlignment="Center" 
                                                   Fill="Transparent" Stroke="{DynamicResource TextFillColorSecondaryBrush}" 
                                                   StrokeThickness="1" RadiusX="1" RadiusY="1"/>
                                        <Rectangle Width="10" Height="18" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                                   RadiusX="1" RadiusY="1">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <!-- Default: hollow (panel closed) -->
                                                    <Setter Property="Fill" Value="Transparent"/>
                                                    <Setter Property="Stroke" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                    <Setter Property="StrokeThickness" Value="1"/>
                                                    <Style.Triggers>
                                                        <!-- Filled when panel is open -->
                                                        <DataTrigger Binding="{Binding IsRightPanelVisible}" Value="True">
                                                            <Setter Property="Fill" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                                                            <Setter Property="Stroke" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>
                                    </Grid>
                                </MenuItem.Header>
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2" x:Name="MainContentGrid">
            <Grid.ColumnDefinitions>
                <!-- Left Panel (Directory Tree) -->
                <ColumnDefinition x:Name="LeftPanelColumn" Width="250" MinWidth="0"/>
                <!-- Shared Left Splitter -->
                <ColumnDefinition x:Name="LeftSplitterColumn" Width="Auto" MinWidth="0"/>
                <!-- Center Panel (File List) - Always visible, takes remaining space -->
                <ColumnDefinition x:Name="CenterPanelColumn" Width="*"/>
                <!-- Shared Right Splitter -->
                <ColumnDefinition x:Name="RightSplitterColumn" Width="Auto" MinWidth="0"/>
                <!-- Right Panel (Preview) -->
                <ColumnDefinition x:Name="RightPanelColumn" Width="300" MinWidth="0"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Quick Access & Directory Tree -->
            <Border Grid.Column="0" Background="#FF191919" 
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" 
                    BorderThickness="0,1,0,0" CornerRadius="0"
                    Visibility="{Binding IsLeftPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    
                    <!-- Quick Access Section -->
                    <StackPanel Grid.Row="0" Margin="10,10,15,0" HorizontalAlignment="Stretch">
                        <!-- Quick Access Items -->
                        <ListView x:Name="QuickAccessListView" ItemsSource="{Binding QuickAccessItems}" 
                                  Background="Transparent" BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                  PreviewMouseWheel="OnPreviewMouseWheel"
                                  SelectionMode="Single"
                                  HorizontalAlignment="Stretch"
                                  Width="Auto"
                                  AllowDrop="True"
                                  PreviewMouseLeftButtonDown="QuickAccessListView_PreviewMouseLeftButtonDown"
                                  PreviewMouseMove="QuickAccessListView_PreviewMouseMove"
                                  DragOver="QuickAccessListView_DragOver"
                                  DragLeave="QuickAccessListView_DragLeave"
                                  Drop="QuickAccessListView_Drop"
                                  MouseDown="QuickAccessListView_MouseDown"
                                  SelectionChanged="QuickAccessListView_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:QuickAccessItem}">
                                    <Grid Background="Transparent" 
                                          MouseLeftButtonUp="QuickAccessItem_MouseLeftButtonUp"
                                          Tag="{Binding}"
                                          HorizontalAlignment="Stretch"
                                          Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="打开" Command="{Binding DataContext.NavigateToPathCommand, Source={x:Reference QuickAccessListView}}" CommandParameter="{Binding Path}">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Open24"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="置顶" 
                                                          Command="{Binding DataContext.TogglePinQuickAccessCommand, Source={x:Reference QuickAccessListView}}" 
                                                          CommandParameter="{Binding}"
                                                          Visibility="{Binding IsPinned, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Pin24"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="取消置顶" 
                                                          Command="{Binding DataContext.TogglePinQuickAccessCommand, Source={x:Reference QuickAccessListView}}" 
                                                          CommandParameter="{Binding}"
                                                          Visibility="{Binding IsPinned, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="PinOff24"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="在资源管理器中查看" 
                                                          Command="{Binding DataContext.OpenInExplorerForPathCommand, Source={x:Reference QuickAccessListView}}" 
                                                          CommandParameter="{Binding Path}">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="FolderOpen24"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="复制路径" 
                                                          Command="{Binding DataContext.CopyPathCommand, Source={x:Reference QuickAccessListView}}" 
                                                          CommandParameter="{Binding Path}">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Link24"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="分析文件夹" 
                                                          Command="{Binding DataContext.AnalyzeFolderForPathCommand, Source={x:Reference QuickAccessListView}}" 
                                                          CommandParameter="{Binding Path}">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Folder24"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="属性" 
                                                          Command="{Binding DataContext.OpenPropertiesForPathCommand, Source={x:Reference QuickAccessListView}}" 
                                                          CommandParameter="{Binding Path}">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Settings24"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                        
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" 
                                                    Margin="8,0">
                                            <Grid Margin="0,0,8,0" VerticalAlignment="Center">
                                                <ui:SymbolIcon Symbol="{Binding Icon}" FontSize="18"
                                                               Foreground="{Binding IconColor}"
                                                               Visibility="{Binding Thumbnail, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                <Image Source="{Binding Thumbnail}"
                                                       Width="18" Height="18"
                                                       Stretch="Uniform"
                                                       Visibility="{Binding Thumbnail, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Left"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="14"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <ui:SymbolIcon Grid.Column="1" Symbol="Pin24" Filled="True"
                                                       Margin="0,0,12,0" FontSize="12" 
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Visibility="{Binding IsPinned, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}"
                                                        CornerRadius="0">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF404040"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FF606060"/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Separator Grid.Row="1" Margin="5,8" Background="{DynamicResource ControlStrokeColorSecondaryBrush}"/>
                    
                    <!-- Directory Tree -->
                    <TreeView Grid.Row="3" x:Name="DirectoryTreeView" 
                              Background="Transparent" BorderThickness="0" Margin="0,0,15,10"
                              ItemsSource="{Binding DirectoryTree}"
                              ScrollViewer.VerticalScrollBarVisibility="Disabled"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              PreviewMouseWheel="OnPreviewMouseWheel"
                              SelectedItemChanged="DirectoryTreeView_SelectedItemChanged"
                              ItemContainerStyle="{StaticResource DirectoryTreeViewItemStyle}">
                        <TreeView.Resources>
                            <!-- Add BooleanToVisibilityConverter -->
                            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                        </TreeView.Resources>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding SubDirectories}">
                                <StackPanel Orientation="Horizontal">
                                    <Grid Margin="0,0,5,0" VerticalAlignment="Center">
                                        <!-- Colorful folder icon -->
                                        <ui:SymbolIcon Symbol="{Binding Icon}" FontSize="18"
                                                       Foreground="{Binding IconColor}"
                                                       Visibility="{Binding Thumbnail, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                        <Image Source="{Binding Thumbnail}"
                                               Width="18" Height="18"
                                               Stretch="Uniform"
                                               Visibility="{Binding Thumbnail, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    </Grid>
                                    
                                    <!-- Directory name -->
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" FontSize="14"/>
                                    
                                    <!-- Loading indicator with color -->
                                    <ui:ProgressRing Width="14" Height="14" Margin="5,0,0,0"
                                                     IsIndeterminate="True"
                                                     Foreground="#FF409EFF"
                                                     Visibility="{Binding IsLoadingChildren, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Error indicator -->
                                    <ui:SymbolIcon Symbol="ErrorCircle24" Margin="5,0,0,0" 
                                                   Foreground="#FFF56C6C" 
                                                   Width="14" Height="14"
                                                   Visibility="{Binding HasLoadError, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   ToolTip="{Binding LoadErrorMessage}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
                </ScrollViewer>
            </Border>

            <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch" 
                          Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                          DragCompleted="LeftGridSplitter_DragCompleted">
                <GridSplitter.Style>
                    <Style TargetType="GridSplitter">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <!-- Hide when left panel is hidden -->
                            <DataTrigger Binding="{Binding IsLeftPanelVisible}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GridSplitter.Style>
            </GridSplitter>

            <!-- Center Panel - File List (Always visible) -->
            <Border Grid.Column="2" Background="#FF191919" 
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                <Border.Style>
                    <Style TargetType="Border">
                        <!-- Default style when both panels are visible -->
                        <Setter Property="BorderThickness" Value="0,1,0,0"/>
                        <Setter Property="CornerRadius" Value="0"/>
                        <Style.Triggers>
                            <!-- Left panel hidden, right panel visible -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsLeftPanelVisible}" Value="False"/>
                                    <Condition Binding="{Binding IsRightPanelVisible}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderThickness" Value="0,0.5,0,0"/>
                                <Setter Property="CornerRadius" Value="0"/>
                            </MultiDataTrigger>
                            <!-- Left panel visible, right panel hidden -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsLeftPanelVisible}" Value="True"/>
                                    <Condition Binding="{Binding IsRightPanelVisible}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderThickness" Value="0,0.5,0,0"/>
                                <Setter Property="CornerRadius" Value="0"/>
                            </MultiDataTrigger>
                            <!-- Both panels hidden (center only) -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsLeftPanelVisible}" Value="False"/>
                                    <Condition Binding="{Binding IsRightPanelVisible}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderThickness" Value="0,0.5,0,0"/>
                                <Setter Property="CornerRadius" Value="0"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Drives View Header -->
                    <StackPanel Grid.Row="0" Margin="10,10,10,0" Visibility="{Binding IsThisPCView, Converter={StaticResource BooleanToVisibilityConverter}}">
                         <TextBlock Text="设备和驱动器" FontSize="14" FontWeight="SemiBold" Margin="4,0,0,10" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>

                    <!-- Drives List View -->
                    <ListView Grid.Row="1" x:Name="DrivesView" 
                              ItemsSource="{Binding Drives}"
                              Background="Transparent" BorderThickness="0"
                              Margin="10,0,10,10"
                              SelectionMode="Single"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              MouseDoubleClick="DrivesView_MouseDoubleClick"
                              MouseDown="DrivesView_MouseDown"
                              Visibility="{Binding IsThisPCView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="4"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="0" BorderThickness="1" BorderBrush="Transparent" Padding="8,4">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
